<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ivSwipeLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_login_swipe_line"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loginLogoMarginTop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_login_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/loginTextSize"
        android:textColor="@color/loginText"
        android:layout_below="@id/ivLogo"
        android:layout_marginTop="55.3dp"
        android:layout_marginStart="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/login"/>

    <TextView
        android:id="@+id/tvLoginSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14.3sp"
        android:textColor="@color/loginText"
        android:layout_below="@id/tvLoginText"
        android:layout_marginTop="17.3dp"
        android:layout_marginStart="23.3dp"
        android:text="@string/with_your_phone_number"/>

    <Spinner
        android:id="@+id/sp1"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLoginSubText"
        android:layout_marginTop="50dp"
        android:paddingLeft="0dp"
        android:paddingBottom="15dp" />


    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginSubText"
        android:layout_marginTop="53dp"
        android:layout_toRightOf="@+id/sp1"
        android:hint=""
        android:inputType="number"
        android:maxLength="10"
        android:paddingBottom="15dp"

        />


</RelativeLayout>
    </FrameLayout>